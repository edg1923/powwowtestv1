{
  "type": "object",
  "comment": "Login",
  "properties": {
    "username": {
      "type": "string",
      "label": "username",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"username\"]",
      "control": "text"
    },
    "password": {
      "type": "string",
      "label": "password",
      "update": {
        "type": "action",
        "action": [
          "submit"
        ]
      },
      "selector": "[name=\"password\"]",
      "control": "text"
    },
    "errorMessage": {
      "type": "string",
      "label": "errorMessage",
      "update": {
        "type": "none"
      },
      "control": "property.innerText",
      "selector": "body > div.warning > p > font"
    },
    "submit": {
      "type": "action",
      "parameters": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "selector": ".button",
      "control": "action.button"
    },
    "isLogin": {
      "type": "identifier",
      "selector": "body > div:nth-child(5) > form > table > tbody > tr:nth-child(4) > td:nth-child(2) > input[type=\"checkbox\"]",
      "control": "property.innerText"
    }
  },
  "connect": []
}
